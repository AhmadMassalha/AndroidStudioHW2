<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameOverActivity">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/game_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="@color/white" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORE"
        android:textSize="30sp"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/gameOver_score"
        >
    </TextView>
    <TextView
        android:id="@+id/gameOver_result"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:textSize="30sp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/gameOver_score"
        android:text="00000" >
    </TextView>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/gameOver_result"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:id="@+id/gameOver_name"
        android:inputType="textPersonName"
        android:layout_centerHorizontal="true"
        >
    </EditText>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/gameOver_saveRecord"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/gameOver_name"
        android:layout_marginTop="100dp"
        android:text="Save"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/gameOver_back"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/gameOver_saveRecord"
        android:layout_marginTop="55dp"
        android:text="Back"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white" />
</RelativeLayout>
